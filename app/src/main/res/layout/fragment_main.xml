
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.bebek.MainActivity$PlaceholderFragment"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/arkaplan_converted"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id= "@+id/layout">

        <TextView
            android:id="@+id/textAciklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:text="Merhabalar Hoşgeldiniz;\nOdasında uyuyan bebeğinizi rahatıkla kontrol edebileceğiniz bir uygulama tasarladık.
             "/>

        <Button
            android:id="@+id/buttonBasla"
            android:text="UYGULAMAYI KULLANMAYA BAŞLA"
            android:textColor="#ff7fffe6"
            android:textSize="16sp"

            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#ffc270d5"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:layout_below="@+id/textAciklama"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="99dp" />

        <Button
            android:id="@+id/developers"

            android:text="DEVELOPERS"
            android:textColor="#ff7fffe6"
            android:textSize="16sp"

            android:layout_width="143dp"
            android:layout_height="45dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#ffc270d5"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"

            android:layout_alignBaseline="@+id/cikis"
            android:layout_alignBottom="@+id/cikis"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/cikis"
            android:text="ÇIKIŞ"
            android:textColor="#ff7fffe6"
            android:textSize="16sp"

            android:layout_width="143dp"
            android:layout_height="45dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#ffc270d5"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:layout_marginBottom="113dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />


    </RelativeLayout>
