<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.bebek.MainActivity$PlaceholderFragment"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="472dp"
        android:background="@drawable/arkaplan_converted"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/textAciklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:text="Merhaba, Hoşgeldiniz  \n
            Uygulamamız bebeğinizi en kolay şekilde takip etmenize olanak sağlamayı amaçlamaktadır. \n
            Uygulamada öncelikle kullanıcı tipini belirlemeniz gerekmektedir. Eğer cihazınız bebeğinizin odasında
             kamera olarak kullanacaksınız Bebek Odası seçeneğini, Bebeğinizi izlemek için Aile seçeneğini seçmelisiniz.

            "


            />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/buttonBasla"
            android:src="@drawable/uygbasla"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />


    </RelativeLayout>
</ScrollView>