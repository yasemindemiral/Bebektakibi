<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.bebek.MainActivity$PlaceholderFragment"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="472dp"
        android:background="@drawable/arkaplan_converted"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >
        <ImageButton
            android:id="@+id/buttonAile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aile"
            android:src="@drawable/aile"
            android:layout_marginRight="64dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

        <ImageButton
            android:id="@+id/buttonBebekOdasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bebek Odasını İzle"
            android:src="@drawable/bebekodasi"
            android:layout_below="@+id/buttonAile"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="39dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:text="Cihazı nerede kullanacağınızı seçmelisiniz.Eğer bebeğinizin odasına koyacağınız cihaz ise lütfen BEBEK ODASI seçeneğini, kullanmakta olduğunuz cihaz ise AİLE seçeneğini seçiniz."
            android:id="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>
</ScrollView>